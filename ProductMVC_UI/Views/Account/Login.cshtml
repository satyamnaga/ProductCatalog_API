
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_MasterLayout.cshtml";
}
<style>
    .control-label {
        font-family: 'Times New Roman';
        font-size: 18px;
        font-weight: normal;
    }

    .form-control {
        font-family: 'Times New Roman';
        font-size: 17px;
    }

    .a:hover {
        color: aquamarine !important;
    }
</style>
@using ProductMVC_UI.Models;
@model ProductEntity
@using (Html.BeginForm())
{
    <br />
    <h2 style="font-family:'Times New Roman';text-align:center;font-size:23px;">Please Login Here</h2><br />
    @Html.ValidationSummary(true)
    <div class="container">
        @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
        <div class="row">
            <div class="col-xs-12 col-sm-4"></div>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label for="rname" class="control-label">Role Name</label>
                            @Html.DropDownListFor(x => x.RoleName, new SelectList(Enum.GetValues(typeof(RoleName))), "Select", new { @class = "form-control", required = "true" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label for="uname" class="control-label">Username</label>
                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control", type = "text", required = "true" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label for="paswd" class="control-label">Password</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", required = "true" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="btnLogIn" style="font-family:'Times New Roman'; font-size:17px;">Log In</button>
                </div>
            </div>
        </div>
    </div>
}

